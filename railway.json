{
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "pip install -r requirements.txt && chmod +x railway_startup.sh"
    },
    "deploy": {
        "startCommand": "chmod +x railway_startup.sh && ./railway_startup.sh",
        "healthcheckPath": "/health",
        "healthcheckTimeout": 100,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3
    },
    "variables": {
        "PYTHON_VERSION": "3.11.0",
        "NIXPACKS_PYTHON_VERSION": "3.11.0",
        "GUNICORN_WORKERS": "4",
        "GUNICORN_THREADS": "2",
        "GUNICORN_TIMEOUT": "30",
        "APP_DOMAIN": "ticket-bot-production.up.railway.app"
    }
}





